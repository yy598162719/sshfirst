<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.itheima.crm.domain.User" table="sys_user">
		<id name="user_id" column="user_id">
			<!-- 主键生成策略： -->
			<generator class="native"/>
		</id>
		<!-- 其他的属性都是用property建立映射 -->
		<property name="user_code" column="user_code" length="32"/>
		<property name="user_name" column="user_name" length="64"/>
		<property name="user_password" column="user_password" length="32"/>
		<property name="user_state" column="user_state" length="1"/>
	</class>
</hibernate-mapping>